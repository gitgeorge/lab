<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.msingiapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.msingiapp.SplashActivity"
            android:label="@string/app_header" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.msingiapp.MainMenu"
            android:label="@string/welcome" >
        </activity>
        <activity
            android:name="com.msingiapp.Subjects"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/sub" >
        </activity>
        <activity
            android:name="com.msingiapp.Year"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_header" >
        </activity>
        <activity
            android:name="com.msingiapp.Exam"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_header" >
        </activity>
        <activity
            android:name="com.msingiapp.Score"
            android:label="@string/app_header" >
        </activity>
        <activity
            android:name="com.msingiapp.Revision"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_header" >
        </activity>
        <activity android:name="com.msingiapp.DatabaseHelper" >
        </activity>
        <activity android:name="com.msingiapp.About" >
        </activity>
        <activity
            android:name="com.msingiapp.Help"
            android:label="@string/app_header" >
        </activity>
    </application>

</manifest>